{% extends "base.twig" %}

{% block content %}

	<div class="container page-section l-about post-type-{{post.post_type}}" id="post-{{post.ID}}" >
		<div class="row">
			<div class="col-md-12">
				<h1 class="text-center">{{post.title}}</h1>
			</div>
			<div class="col-sm-6">
				{{post.content}}
				
				<div class="l-about__qualifications">
					<h2>{{post.get_field('about_qualifications_title')}}</h2>
					<ul>
						{% for item in post.get_field('about_qualfications') %}
						    <li>{{item.qualification}}</li>
						{% endfor %}
					</ul>
				</div>
			</div>
			<div class="col-sm-6">
				<img src="{{post.get_field('about_image').url}}" alt="{{post.get_field('about_image').alt}}">
			</div>
		</div>
	</div>
{% endblock %}